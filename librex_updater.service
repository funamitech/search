[Unit]
Description=LibreX - A privacy respecting free as in freedom meta search engine
After=syslog.target
After=network.target

[Service]
RestartSec=10s
Type=simple

User=librex
Group=librex

WorkingDirectory=/var/www/librex
ExecStart=/var/www/librex/auto_updater.sh

Restart=always

[Install]
WantedBy=multi-user.target
